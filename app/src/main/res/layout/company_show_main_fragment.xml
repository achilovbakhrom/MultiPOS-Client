<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginStart="@dimen/twenty_five_dp"
            android:id="@+id/tvCopmanyName"
            android:textSize="18sp"
            android:text="Apple"
            android:textColor="@color/colorTitle"
            android:layout_marginBottom="@dimen/fifteen_dp"/>

        <com.jim.multipos.customView.MPTabBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mpCompanyShowMainTabBar"
            app:items="@array/company_show_items" />

        <FrameLayout
            android:id="@+id/flNewItemContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </LinearLayout>
</layout>

