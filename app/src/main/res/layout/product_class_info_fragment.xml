<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAddEditBg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_class"
        android:textColor="@color/colorTitle"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/colorPrimary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginRight="@dimen/fifteen_dp"
        android:background="@drawable/table_border"
        android:layout_marginTop="@dimen/twenty_dp"
        android:orientation="vertical"
        android:padding="@dimen/one_dp">

        <!-- Name -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/hundred_ten_dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_bottom_right">
                <TextView
                    android:layout_width="@dimen/hundred_ten_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:text="@string/name_required"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="@dimen/five_dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_bottom">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Product Class 1"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="@dimen/five_dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <!-- Active -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/hundred_ten_dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_bottom_right">
                <TextView
                    android:layout_width="@dimen/hundred_ten_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:text="@string/is_active"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="@dimen/five_dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Yes"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="@dimen/five_dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <!-- Description -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/hundred_ten_dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_right">
                <TextView
                    android:layout_width="@dimen/hundred_ten_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:text="@string/description"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="@dimen/five_dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_right_bottom_rounded">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Product Class Description"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="@dimen/five_dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>