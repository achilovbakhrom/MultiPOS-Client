<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:layout_marginStart="@dimen/twenty_dp"
                android:text="@string/add_edit_contact_person"
                android:textColor="@color/colorTitle"
                android:layout_marginBottom="@dimen/ten_dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:background="@color/colorTitle"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginEnd="@dimen/twenty_dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/photo"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="@dimen/seventy_dp"
                        android:layout_height="@dimen/seventy_dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/rlContactPersonPhoto">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_company_photo" />
                        <ImageView
                            android:layout_width="@dimen/twenty_two_dp"
                            android:layout_height="@dimen/twenty_two_dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_company_photo_plus_button" />
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name_required"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <com.jim.multipos.customView.MpEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:id="@+id/etPersonFirstName"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name_required"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <com.jim.multipos.customView.MpEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:id="@+id/etContactPersonLastName"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/position_required"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <com.jim.multipos.customView.MpSpinner
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/mpSpinnerContactPersonPosition"/>
                    <ImageView
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:background="@drawable/plus_button_bg"
                        android:baselineAligned="false"
                        android:src="@drawable/plus"
                        android:padding="@dimen/four_dp"
                        android:translationZ="@dimen/three_dp"
                        android:layout_marginEnd="@dimen/twenty_dp"
                        android:id="@+id/btnAddPositionToContactPerson"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <com.jim.multipos.customView.MpRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mpGenderRadioButton"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/marital_status"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <com.jim.multipos.customView.MpRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mpMaritalStatusRadioButton"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/nationality"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <com.jim.multipos.customView.MpEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:id="@+id/etContactPersonNationality" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/language"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/hundred_eighty_dp"
                android:layout_height="wrap_content"
                android:text="@string/phones_with_two_dots"
                android:textColor="@color/colorTitle"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/ten_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <com.jim.multipos.customView.MpEditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="@string/office_required"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/twenty_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:id="@+id/etContactPersonOffice"/>
                <com.jim.multipos.customView.MpEditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="@string/mobile"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:id="@+id/etContactPersonMobile"/>
                <com.jim.multipos.customView.MpEditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="@string/personal"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:id="@+id/etContactPersonPersonal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/email_required"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <com.jim.multipos.customView.MpEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:id="@+id/etContactPersonEmail"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/birth_date"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <com.jim.multipos.customView.MpEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:id="@+id/etContactPersonBirthDate"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">

                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />

                <com.jim.multipos.customView.MpEditTextMultiline
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:minLines="3"
                    android:maxLines="6"
                    android:id="@+id/etContactPersonDescription"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_five_dp"
                android:layout_marginBottom="@dimen/fifteen_dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/twenty_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/cancel_bg"
                    android:id="@+id/btnContactPersonCancel"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/delete_bg"
                    android:id="@+id/btnContactPersonDelete"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/save_bg"
                    android:id="@+id/btnContactPersonSave"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>

