<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MainPageActivity">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.jim.multipos.environment.admin.ui.entities.productClass.productClassList.ProductClassListViewModel"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDarkBlue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_class_list_is_empty"
            />


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvProductClass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ten_dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/fab_add_icon"
            android:scaleType="center"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/sixteen_dp"
            app:backgroundTint="@color/colorNavy"
            />

    </android.support.design.widget.CoordinatorLayout>

</layout>