<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/hundred_dp"
    android:background="@drawable/loading_dialog_bg">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/pbLoadingDialog"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/edit_blue"
        android:text="@string/loading"
        android:textSize="18sp"
        android:layout_below="@id/pbLoadingDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:id="@+id/tvLoadingDialog"/>


</RelativeLayout>