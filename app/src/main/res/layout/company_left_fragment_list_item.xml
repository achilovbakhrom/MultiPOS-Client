<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/hundred_dp"
    android:layout_marginEnd="@dimen/hundred_dp"
    android:layout_marginTop="@dimen/five_dp"
    android:layout_marginBottom="@dimen/five_dp"
    app:cardCornerRadius="@dimen/ten_dp"
    android:id="@+id/cvCompanyItemParent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/colorTitle"
            android:id="@+id/ivCompanyItemStar"/>

        <ImageView
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_margin="@dimen/fifteen_dp"
            android:id="@+id/ivCompanyAvatar"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toEndOf="@id/ivCompanyAvatar"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:layout_marginEnd="@dimen/forty_dp"
            android:id="@+id/llCompanyNameAndOcc">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTitle"
                android:text="Kinder"
                android:textSize="@dimen/thirteen_dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/eight_dp"
                android:id="@+id/tvCompanyItemName"/>
            <View
                android:layout_width="@dimen/one_dp"
                android:layout_height="match_parent"
                android:background="@color/colorTitle"
                android:layout_marginTop="@dimen/four_dp"
                android:layout_marginBottom="@dimen/four_dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTitle"
                android:text="Chocolate Farm Proudction"
                android:layout_gravity="center"
                android:textSize="@dimen/thirteen_dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/eight_dp"
                android:id="@+id/tvCompanyItemOccupation"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:background="@color/colorTitle"
            android:layout_toEndOf="@id/ivCompanyAvatar"
            android:layout_alignBottom="@id/llCompanyNameAndOcc"
            android:layout_marginEnd="@dimen/forty_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:id="@+id/viewDivieder"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/edit_blue"
            android:text="Best on its market field of hygiene staff including shampoo and soaps"
            android:layout_gravity="center"
            android:textSize="@dimen/thirteen_dp"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_toEndOf="@id/ivCompanyAvatar"
            android:layout_marginEnd="@dimen/forty_dp"
            android:layout_alignTop="@id/viewDivieder"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:id="@+id/tvCompanyItemDescription"/>

    </RelativeLayout>




</android.support.v7.widget.CardView>