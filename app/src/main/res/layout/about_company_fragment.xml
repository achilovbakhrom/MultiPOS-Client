<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/company_photo"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/seventy_dp"
                        android:layout_height="@dimen/seventy_dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="@dimen/ten_dp">
                        <RelativeLayout
                            android:id="@+id/rlCompanyPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_company_photo"
                                android:id="@+id/ivCompanyPhoto"
                                android:scaleType="fitXY"
                                />
                            <ImageView
                                android:layout_width="@dimen/twenty_two_dp"
                                android:layout_height="@dimen/twenty_two_dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/ic_company_photo_plus_button"
                                android:id="@+id/ivCompanyPhotoPlus"
                                />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/company_name_required"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <com.jim.multipos.customView.MpEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:id="@+id/etCompanyName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/business_occupation_required"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />

                <com.jim.multipos.customView.MpEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:id="@+id/etCompanyBusinessOccupation"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp"
                    android:text="@string/contact_data"
                    android:textColor="@color/colorTitle" />
                <ImageView
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:background="@drawable/plus_button_bg"
                    android:baselineAligned="false"
                    android:src="@drawable/plus"
                    android:padding="@dimen/four_dp"
                    android:translationZ="@dimen/three_dp"
                    android:id="@+id/btnAddContactData"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/twenty_dp"
                android:layout_marginStart="@dimen/twenty_dp"
                android:id="@+id/llContactDataContainer" />

            <TextView
                android:id="@+id/tvContactDataError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/remove_red"
                android:layout_marginStart="@dimen/twenty_dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/twenty_dp">
                <TextView
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/colorTitle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/twenty_dp" />
                <com.jim.multipos.customView.MpEditTextMultiline
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:minLines="3"
                    android:maxLines="6"
                    android:id="@+id/etDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/twenty_dp"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/cancel_bg"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:id="@+id/btnCompanyAddEditCancel" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:layout_marginStart="@dimen/five_dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/save_bg"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:id="@+id/btnCompanyNext" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
