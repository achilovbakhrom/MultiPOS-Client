<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.jim.multipos.ui.adminmainpage.fragments.establishment.viewmodel.EstablishmentItemViewModel"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:paddingTop="@dimen/ten_dp"
        android:paddingBottom="@dimen/ten_dp"
        android:paddingStart="@dimen/twenty_dp"
        android:paddingEnd="@dimen/twenty_dp"
        android:background="@{viewModel.isClicked ? @color/colorNavy : @color/colorWhite}">

        <TextView
            android:id="@+id/tvEstablishmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@{viewModel.isClicked ? @color/colorWhite : @color/colorDarkTitle}"
            android:text="@{viewModel.establishmentName}"
            android:layout_marginBottom="@dimen/five_dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@{viewModel.isClicked ? @color/colorWhite : @color/colorDarkTitle}"
            android:layout_marginBottom="@dimen/five_dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@{viewModel.isClicked ? @color/colorWhite : @color/colorDarkTitle}"
            android:layout_marginBottom="@dimen/five_dp"/>
    </LinearLayout>
</layout>