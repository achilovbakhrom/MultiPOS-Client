<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="@dimen/hundred_eighty_dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/phone"
        android:textColor="@color/colorTitle"
        android:layout_marginStart="@dimen/twenty_dp"
        android:id="@+id/tvContactDataTypeName"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.jim.multipos.customView.MpEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/ten_dp"
            android:id="@+id/etContactData"/>

        <ImageView
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:background="@drawable/plus_button_bg"
            android:baselineAligned="false"
            android:src="@drawable/ic_minus"
            android:tint="@color/remove_red"
            android:padding="@dimen/six_dp"
            android:translationZ="@dimen/three_dp"
            android:id="@+id/btnRemoveContactData"/>
    </LinearLayout>
</LinearLayout>