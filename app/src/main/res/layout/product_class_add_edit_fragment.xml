<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAddEditBg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:text="@string/add_product_class_nl"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"
        android:textSize="@dimen/seventeen_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_five_dp">

        <TextView
            android:layout_width="@dimen/hundred_forty_dp"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_marginStart="@dimen/twenty_dp"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/sixteen_dp"

            />

        <com.jim.multipos.customView.MpEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp">

        <TextView
            android:layout_width="@dimen/hundred_forty_dp"
            android:layout_height="wrap_content"
            android:text="@string/is_active"
            android:layout_marginStart="@dimen/twenty_dp"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/sixteen_dp"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp">

        <TextView
            android:layout_width="@dimen/hundred_forty_dp"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:layout_marginStart="@dimen/twenty_dp"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/sixteen_dp"
            />

        <com.jim.multipos.customView.MpEditTextMultiline
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
            android:minLines="3"
            android:maxLines="6"
            android:gravity="top"
            android:layout_weight="1"
            android:ems="10" />


    </LinearLayout>


</LinearLayout>